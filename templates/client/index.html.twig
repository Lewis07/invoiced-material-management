{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center mt-3">Liste des clients</h3>
        <a href="{{ path('client_new') }}" class="btn btn-primary mb-2">Nouveau client</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Contact</th>
                    <th>Addresse</th>
                    <th>Matériel acheté</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.nomCli }}</td>
                        <td>{{ client.prenomCli }}</td>
                        <td>{{ client.contact }}</td>
                        <td>{{ client.addresseCli }}</td>
                        <td>{{ client.materiel.designation }}</td>
                        <td>
                            <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-info">Editer</a>
                            <a href="{{ path('client_delete', {'id': client.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr align="center">
                        <td colspan="5">Aucun client</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
