<script src="{{ asset('js/jquery.min.js') }}"></script>
<script>
    $(function(){ 
        let $materiel_type = $('#materiel_type');
        $($materiel_type).change(function(){ 
            let form = $(this).closest('form');
            let data = {};
            data[$materiel_type.attr['name']] = $materiel_type.val();
            // console.log($materiel_type.val());
            // console.log(data);

            $.post($form.attr['action'], data).then((response) => {
                $("#materiel_sousType").replaceWith(
                    $(response).find("#materiel_sousType");
                );
            });
            console.log($("#materiel_sousType").val());
        });
    });
</script>