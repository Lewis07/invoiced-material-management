{% extends 'base.html.twig' %}

{% block title %}Liste des matériels{% endblock %}

{% block body %}
    <div class="container">
        <h3 class="text-center mt-3">Liste des matériels</h3>
        <a href="{{ path('materiel_new') }}" class="btn btn-primary mb-2">Nouveau matériel</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Désignation</th>
                    <th class="text-center">Type</th>
                    <th class="text-center">Sous-type</th>
                    <th class="text-center">Quantité</th>
                    <th class="text-center">Prix unitaire</th>
                    <th class="text-center">Date d'approvisionnement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                 {% for materiel in materiels %}
                    <tr>
                        <td>{{ materiel.designation }}</td>
                        <td class="text-center">{{ materiel.sousType.type.descrType }}</td>
                        <td class="text-center">{{ materiel.sousType.descrSousType }}</td>
                        <td class="text-center">{{ materiel.totalMateriel }}</td>
                        <td class="text-center">{{ materiel.prixUnitaire | number_format(0,'',' ')}} Ar</td>
                        <td class="text-center">{{ materiel.dateApprovisionnement ? materiel.dateApprovisionnement|date('d/m/Y') : '' }}</td>
                        <td>
                            <a href="{{ path('materiel_edit', {'id': materiel.id}) }}" class="btn btn-info">Editer</a>
                            <a href="{{ path('materiel_delete', {'id': materiel.id}) }}" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr align="center">
                        <td colspan="5">Aucun matériel</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
